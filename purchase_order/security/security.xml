    <record id="group_editable_order" model="res.groups">
        <field name="name">Editable Order</field>
        <field name="category_id" ref="module_category_purchase_order"/>
        <field name="domain_force">[ ('state','not in',['done','cancel'])]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <record id="group_not_editable_order" model="res.groups">
        <field name="name">Don't Editable Order</field>
        <field name="category_id" ref="module_category_purchase_order"/>
        <field name="domain_force">[ ('state','in',['done','cancel'])]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
